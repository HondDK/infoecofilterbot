{
  "compilerOptions": {
    "lib": [
      "es6"
    ],

    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
     "esm": true,
    "ts-node": {
      "esm": true
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["./node_modules", "**/*.spec.ts"],,

}